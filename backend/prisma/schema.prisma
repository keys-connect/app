generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model Key {
  id          Int       @id @default(autoincrement())
  hash        String
  title       String
  startDate   String
  endDate     String
  description String
  contactLink String
  keyRules    KeyRule[] // for now it's all ANDs
  User        User?     @relation(fields: [userId], references: [id])
  userId      Int?
}

model KeyRule {
  id              Int     @id @default(autoincrement())
  name            String
  endpoint        String?
  contractAddress String?
  functionName    String?
  Key             Key?    @relation(fields: [keyId], references: [id])
  keyId           Int?
}

model User {
  id      Int    @id @default(autoincrement())
  address String @unique
  email   String
  keys    Key[]
}
