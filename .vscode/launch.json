{
  "version": "0.2.0",
  "configurations": [
    {
      "name": "hardhat test",
      "type": "node",
      "request": "launch",
      "skipFiles": ["<node_internals>/**"],
      "runtimeExecutable": "${workspaceFolder}/contracts/node_modules/.bin/hardhat",
      "args": ["test"],
      "cwd": "${workspaceFolder}/contracts",
      "console": "integratedTerminal"
    },
    {
      "name": "hardhat request-mint",
      "type": "node",
      "request": "launch",
      "skipFiles": ["<node_internals>/**"],
      "runtimeExecutable": "${workspaceFolder}/contracts/node_modules/.bin/hardhat",
      "args": ["request-mint", "--network", "mumbai"],
      "cwd": "${workspaceFolder}/contracts",
      "console": "integratedTerminal"
    }
  ]
}
